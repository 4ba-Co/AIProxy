{
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "AiGateway": {
        "Url": "http://+:5501"
      }
    }
  },
  "UsageTracking": {
    "Enabled": true,
    "Providers": {
      "openai": {
        "Enabled": true,
        "EnableCostCalculation": false,
        "SamplingRate": 1.0,
        "SupportedEndpoints": [
          "v1/chat/completions",
          "v1/completions",
          "v1/embeddings"
        ]
      },
      "anthropic": {
        "Enabled": true,
        "EnableCostCalculation": true,
        "SamplingRate": 1.0,
        "ModelPricing": {
          "claude-3-5-sonnet-20241022": {
            "InputPricePerMillion": 3.00,
            "OutputPricePerMillion": 15.00,
            "CachePricePerMillion": 3.75
          },
          "claude-3-5-haiku-20241022": {
            "InputPricePerMillion": 1.00,
            "OutputPricePerMillion": 5.00,
            "CachePricePerMillion": 1.25
          }
        }
      }
    },
    "Batching": {
      "Enabled": true,
      "BatchSize": 100,
      "FlushIntervalMs": 5000,
      "MaxQueueSize": 10000,
      "ProcessingThreads": 2
    },
    "CircuitBreaker": {
      "Enabled": false,
      "FailureThreshold": 10,
      "ResetTimeoutMs": 30000
    },
    "Sampling": {
      "Strategy": "Fixed",
      "Rate": 1.0
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
